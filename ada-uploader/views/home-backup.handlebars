<div class="container" role="main">

	{{#if success}}
	<h2>Your entries have been submitted. Thank you!</h2>
	<a href="/">Click here to make another entry</a>
	{{/if}}

	{{#if error}}
	<div class="error">{{error}}</div>
	{{/if}}

	{{#if showForm}}

	<form action="/" method="post">

	<h1>BBC Audio Drama Awards 2015</h1>
	<h3>Audio uploader</h3>
	<div class="row entry-master">

		<div class="panel panel-info">
			<div class="panel-heading">
				<h3 class="panel-title">Entry 1</h3>
			</div>
			<div class="panel-body">

					<p>Select category:

						<select id="category" name="category" class="category">
							<option value="cat1">Cat 1</option>
							<option value="cat2">Cat 2</option>
							<option value="cat3">Cat 3</option>
						</select>
					</p>

					<script>
						//if (!{{category}} === null) {
							$('#category').val("{{category}}");
						//}
					</script>

					<p>Name of entrant (individual or company):
						<input value="{{entrant}}" id="entrant" name="entrant" placeholder="Name of entrant">
					</p>

					<p>Programme title:
						<input value="{{progtitle}}" id="title" name="title" placeholder="Title of programme">
					</p>


				<div class="panel-body" id="ada-uploader"></div>

				</div>

				</div>
			</div>

		<div class="row entry">


		</div>

		<div class="row">
			<button type="button" class="btn btn-success" id="add-entry"> + Add another entry</button>

		</div>

		<div class="row">
			<button type="submit" class="btn btn-lg btn-primary">Submit all entries</button>
		</div>
	</form>
	{{/if}}

</div>
